@page
@using TestOnLine.Models.Management
@model ExamManagementModel
@{
    ViewData["Title"] = "考试管理";
    var teacherId = ViewBag.TeacherId;
}

<h3>考试管理</h3>

<h4>目前正在进行的考试</h4>
<ul>
    @foreach (var exam in Model.OngoingExams)
    {
            <li>
                <strong>科目:</strong> @exam.CourseName <br />
                    <strong>考试名称:</strong> <a href="/Exam/Start/@exam.ExamId?teacherId=@teacherId">@exam.ExamName</a> <br />
                <strong>截止时间:</strong> @exam.EndTime.ToString("yyyy-MM-dd HH:mm:ss")
            </li>
    }
</ul>
