@{
    ViewData["Title"] = "登录";
}

<div class="text-center mt-5">
    <h1 class="display-4">欢迎使用在线考试系统</h1>
    <form method="post" asp-action="Validate" asp-controller="Login" style="max-width: 400px; margin: auto;">
        <div class="form-group my-4 text-left">
            <label>选择身份</label>
            <div>
                <label for="student" class="mr-3">
                    <input type="radio" id="student" name="role" value="student" checked> 学生
                </label>
                <label for="teacher">
                    <input type="radio" id="teacher" name="role" value="teacher"> 教师
                </label>
            </div>
        </div>
        <div class="form-group my-4 text-left">
            <label for="id">账号：</label>
            <input type="text" class="form-control" id="id" name="id" required aria-label="账号">
        </div>
        <div class="form-group my-4 text-left">
            <label for="password">密码：</label>
            <input type="password" class="form-control" id="password" name="password" required aria-label="密码">
        </div>
        <div class="form-group my-4">
            <button type="submit" class="btn btn-primary btn-block">登录</button>
        </div>
    </form>
</div>

